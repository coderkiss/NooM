<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <me.dawson.noom.view.NoomText
        android:id="@+id/tv_noom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp" />

    <me.dawson.noom.view.NoomImage
        android:id="@+id/iv_noom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_noom"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp" />

    <me.dawson.noom.view.NoomButton
        android:id="@+id/bt_noom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_noom"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp" />

</RelativeLayout>